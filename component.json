{
    "title": "GitHub",
    "description": "Powerful collaboration, code review, and code management for open source and private projects.\n",
    "docsUrl": "https://developer.github.com/v3/",
    "url": "https://api.apis.guru/v2/specs/github.com/v3/swagger.json",
    "buildType":"docker",
    "envVars": {
        "OAUTH_CLIENT_ID": {
            "description": "OAuth Client ID"
        },
        "OAUTH_CLIENT_SECRET": {
            "description": "OAuth Client Secret"
        }
    },
    "credentials": {
        "fields": {
            "server": {
                "label": "Server",
                "viewClass": "SelectView",
                "model": [
                    "https://api.github.com/",
                    "--- Custom URL"
                ],
                "required": true
            },
            "otherServer": {
                "label": "Custom Server URL",
                "viewClass": "TextFieldView"
            },
            "oauth_2_0": {
                "label": "OAuth2 is a protocol that lets external apps request authorization to private\ndetails in a user's GitHub account without getting their password. This is\npreferred over Basic Authentication because tokens can be limited to specific\ntypes of data, and can be revoked by users at any time.\n",
                "viewClass": "OAuthFieldView"
            }
        },
        "oauth2": {
            "client_id": "{{OAUTH_CLIENT_ID}}",
            "client_secret": "{{OAUTH_CLIENT_SECRET}}",
            "auth_uri": "https://github.com/login/oauth/authorize",
            "token_uri": "https://github.com/login/oauth/access_token",
            "scopes": [
                "repo",
                "gist"
            ]
        }
    },
    "actions": {
        "simpleAction": {
            "main": "./lib/actions/simpleAction.js",
            "title": "Simple Action",
            "fields": {},
            "metadata": {
                "in": {
                    "type": "object"
                },
                "out": {
                    "type": "object"
                }
            }
        }
    }
}
